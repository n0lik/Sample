<resources>
    <!-- Base application theme. -->
    <style name="ThemeSampleApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorOnSecondary</item>
        <item name="toolbarStyle">@style/DefaultToolbar</item>
        <item name="choiceChip">@style/ChipChoice</item>
        <item name="chipGroupStyle">@style/ChipGroup</item>
    </style>

    <style name="TransparentActionBarTheme">
        <item name="appBarLayoutStyle">@style/TransparentAppBar</item>
        <item name="toolbarStyle">@style/TransparentToolbar</item>
    </style>

    <style name="TransparentAppBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="elevation">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DefaultToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?colorOnPrimary</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="TransparentToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">#02b3e4</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="chipSpacingVertical">4dp</item>
        <item name="chipSpacingHorizontal">4dp</item>
    </style>
</resources>